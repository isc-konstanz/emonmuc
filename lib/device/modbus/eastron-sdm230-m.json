{
    "name": "SDM230-M",
    "category": "Meter",
    "group": "EASTRON",
    "description": "Requires the <b>Modbus</b> (RTU and TCP/IP) driver to be installed.<br><br><b>Energy Meter SDM230-M</b>:<br>Current: 10(100)A<br>Voltage : 230V<br>50(60)Hz",

    "driver": "modbus",
    "devices": [
        {
            "name": "serial<address>",
            "description": "Modbus RTU connection",
            "settings": "RTU:SERIAL_ENCODING_RTU:<baudrate>:DATABITS_8:PARITY_NONE:STOPBITS_2:ECHO_FALSE:FLOWCONTROL_NONE:FLOWCONTROL_NONE"
        }
    ],

    "options": [
        {
            "id": "address",
            "name": "Address",
            "description": "The physical device address to uniquely identify a physical smart meter.<br><br><b>Example:</b><ol><li><b>Linux</b>: /dev/ttyS0 or /dev/ttyUSB0</li><li><b>Windows</b>: COM1</li></ol>",
            "type": "text",
            "mandatory": true,
            "syntax": "deviceAddress"
        },
        {
            "id": "unitId",
            "name": "Unid ID",
            "description": "The device address of the Modbus slave.<br>The slave device address is assigned form 1 to 247.<br>Address 0 is used as broadcast address.</li></ul>",
            "type": "text",
            "mandatory": true
        },
        {
            "id": "baudrate",
            "name": "Baudrate",
            "description": "The Baudrate is the number of distinct symbol changes made to the transmission medium per seconds. It is necessary to configure the same Baudrate for master and slave.",
            "type": "text",
            "default": 2400,
            "mandatory": false
        },
        {
            "id": "timeOffset",
            "name": "Time offset",
            "description": "The time waited in milliseconds, until the serial connection will be used. Necessary for multiple meters on the same line.",
            "type": "text",
            "default": 0,
            "mandatory": false
        }
    ],

    "channels": [
        {
            "name": "<node>*voltage",
            "description": "Voltage",
            "address": "<unitId>:INPUT_REGISTERS:0:FLOAT",
            "logging": {"loggingInterval": 60000, "loggingMaxInterval": 180000, "loggingTolerance": 1, "average": true},
            "configs": {"samplingInterval": 60000, "samplingTimeOffset": "<timeOffset>", "valueType":"FLOAT", "unit": "V"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "Voltage", "tag": "<name>"}
                }
            ]
        },
        {
            "name": "<node>*current",
            "description": "Current",
            "address": "<unitId>:INPUT_REGISTERS:6:FLOAT",
            "logging": {"loggingInterval": 60000, "loggingMaxInterval": 180000},
            "configs": {"samplingInterval": 60000, "samplingTimeOffset": "<timeOffset>", "valueType":"FLOAT", "unit": "A"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "Current", "tag": "<name>"}
                }
            ]
        },
        {
            "name": "<node>*power",
            "description": "Power",
            "address": "<unitId>:INPUT_REGISTERS:12:FLOAT",
            "logging": {"loggingInterval": 60000, "loggingMaxInterval": 180000},
            "configs": {"samplingInterval": 60000, "samplingTimeOffset": "<timeOffset>", "valueType":"FLOAT", "unit": "W"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "Power", "tag": "<name>"}
                }
            ]
        },
        {
            "name": "<node>*frequency",
            "description": "Frequency",
            "address": "<unitId>:INPUT_REGISTERS:70:FLOAT",
            "logging": {"loggingInterval": 60000, "loggingMaxInterval": 180000, "loggingTolerance": 0.1, "average": true},
            "configs": {"samplingInterval": 60000, "samplingTimeOffset": "<timeOffset>", "valueType":"FLOAT", "unit": "Hz"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "Frequency", "tag": "<name>"}
                }
            ]
        },
        {
            "name": "<node>*import",
            "description": "Energy import",
            "address": "<unitId>:INPUT_REGISTERS:72:FLOAT",
            "logging": {"loggingInterval": 60000, "loggingMaxInterval": 180000},
            "configs": {"samplingInterval": 60000, "samplingTimeOffset": "<timeOffset>", "valueType":"FLOAT", "unit": "kWh"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "Energy import", "tag": "<name>"}
                },
                {
                    "process": "kwh_to_power",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "Power import", "tag": "<name>"}
                }
            ]
        },
        {
            "name": "<node>*export",
            "description": "Energy export",
            "address": "<unitId>:INPUT_REGISTERS:74:FLOAT",
            "logging": {"loggingInterval": 60000, "loggingMaxInterval": 180000},
            "configs": {"samplingInterval": 60000, "samplingTimeOffset": "<timeOffset>", "valueType":"FLOAT", "unit": "kWh"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "Energy export", "tag": "<name>"}
                },
                {
                    "process": "kwh_to_power",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "Power export", "tag": "<name>"}
                }
            ]
        }
    ],

    "feeds": [
        {
            "name": "Voltage",
            "tag": "<name>",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES",
            "unit": "V"
        },
        {
            "name": "Current",
            "tag": "<name>",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES",
            "unit": "A"
        },
        {
            "name": "Power",
            "tag": "<name>",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES",
            "unit": "W"
        },
        {
            "name": "Frequency",
            "tag": "<name>",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES",
            "unit": "Hz"
        },
        {
            "name": "Energy import",
            "tag": "<name>",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES",
            "unit": "kWh"
        },
        {
            "name": "Power import",
            "tag": "<name>",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES",
            "unit": "kWh"
        },
        {
            "name": "Energy export",
            "tag": "<name>",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES",
            "unit": "kWh"
        },
        {
            "name": "Power export",
            "tag": "<name>",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES",
            "unit": "kWh"
        }
    ],

    "syntax": {
        "deviceAddress": {
            "keyValue": false,
            "separator": ":"
        }
    }
}